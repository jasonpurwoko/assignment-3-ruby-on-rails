<%= link_to("Home", books_path, :class => 'back-link') %>

<div class="books delete">
  <h2>Delete Book</h2>

  <%= form_for(@book, :method => 'delete') do |f| %>
    <p>
      Are you sure you want to delete this book:
      <var class="reference-name"><%= f.object.title %></var>
    </p>

    <div class="form-buttons">
      <%= f.submit("Delete") %>
    </div>
  <% end %>
</div>
